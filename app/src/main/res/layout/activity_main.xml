<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0f1f">

    <!-- SASIX Watermark -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SASIX"
        android:textColor="#22FF4444"
        android:textSize="120sp"
        android:textStyle="bold"
        android:rotation="-15"
        android:letterSpacing="0.3"
        android:alpha="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hidden Camera Previews -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewViewBack"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />
    
    <androidx.camera.view.PreviewView
        android:id="@+id/previewViewFront"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone" />

    <!-- Main Game Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#CC0A0F1A"
        app:cardCornerRadius="40dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SASIX"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:shadowColor="#FFFF4444"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="15"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ YOU NEVER WIN ⚡"
                android:textColor="#FFFF9999"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#33FF4444"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="25dp"
                app:cornerRadius="30dp" />

            <!-- Camera Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="space_evenly"
                android:layout_marginBottom="25dp">

